<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnSwipe
            motion:touchAnchorId="@id/constraintLayout"
            motion:touchAnchorSide="bottom"
            motion:dragDirection="dragDown"/>
        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            motion:layout_constraintBottom_toTopOf="parent" />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            motion:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@+id/ivLogo"
            android:layout_width="311dp"
            android:layout_height="209dp"
            motion:layout_constraintBottom_toTopOf="@+id/btnOnePlayer"
            android:layout_marginBottom="10dp"
            android:scaleX="0.75"
            android:scaleY="0.75"
            />

        <Constraint
            android:id="@+id/btnOnePlayer"
            android:layout_width="210dp"
            android:layout_height="70dp"
            motion:layout_constraintBottom_toTopOf="@+id/btnMultiplayer"
            android:layout_marginBottom="20dp"
            />

        <Constraint
            android:id="@+id/btnMultiplayer"
            android:layout_width="210dp"
            android:layout_height="70dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"/>
    </ConstraintSet>
</MotionScene>